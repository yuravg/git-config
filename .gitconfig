
# Contents:
#
#  Profile
#  Core
#  Alias
#    Status
#    Commit
#    Checkout
#    Branch
#    Reset(undo work/stage/cache)

# * Profile
[user]
	name = Yuriy VG
	email = yuravg@gmail.com

[github]
	user = yuravg

# * Core
[core]
	editor = vim
	autocrlf = input

# * Alias
# ** Status
[alias]
	st = status
	ss = status -s
	sb = status -s --branch
	si = status -s --ignored

# ** Commit
[alias]
	c = commit
	cm = commit -m
	ci = commit -m

# ** Checkout
[alias]
	co = checkout
	cb = checkout -b
	ct = checkout --track

# ** Branch
[alias]
	br = branch
	bra = branch --all

# ** Reset(undo work/stage/cache)
[alias]
	uw = checkout --
	us = reset HEAD
	uc = rm --cached
