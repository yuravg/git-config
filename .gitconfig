
# Contents:
#
#  Profile
#  Core
#  Alias
#    Status
#    Commit
#    Checkout
#    Branch
#    Reset(undo work/stage/cache)
#    Diff, difftool

# * Profile
[user]
	name = Yuriy VG
	email = yuravg@gmail.com

[github]
	user = yuravg

# * Core
[core]
	editor = vim
	autocrlf = input

# * Alias
# ** Status
[alias]
	st = status
	ss = status -s
	sb = status -s --branch
	si = status -s --ignored

# ** Commit
[alias]
	c = commit
	cm = commit -m
	ci = commit -m

# ** Checkout
[alias]
	co = checkout
	cb = checkout -b
	ct = checkout --track

# ** Branch
[alias]
	br = branch
	bra = branch --all

# ** Reset(undo work/stage/cache)
[alias]
	uw = checkout --
	us = reset HEAD
	uc = rm --cached

# ** Diff, difftool
[alias]
	dw = diff --color-words
	dw0 = diff --color-words -U0
	ds = diff --staged --color-words
	ds0 = diff --staged --color-words -U0
	dh = diff HEAD --color-words
	w = difftool
	s = difftool --staged
	h = difftool HEAD
	wp = difftool --tool=p4merge
	sp = difftool --staged --tool=p4merge
	hp = difftool HEAD --tool=p4merge
	wm = difftool --tool=meld
	sm = difftool --staged --tool=meld
	hm = difftool HEAD --tool=meld
	mt = mergetool
	diffall = "!git difftool --dir-diff"
