# -*- mode: gitconfig -*-

# Path dependent configuration
#
# Example:
#
# For Windows:
# [includeIf "gitdir:C:/projects/"]
# 	path = .gitconfig_CONFIG4WINDOWS_NAME
#
# For Windows(WSL):
# [includeIf "gitdir:mnt/c/projects/"]
# 	path = .gitconfig_CONFIG4WINDOWS_NAME
#
# For Linux:
# [includeIf "gitdir:~/projects/"]
# 	path = .gitconfig_CONFIG4LINUX_NAME
#
# Example of '~/.gitconfig_CONFIG4WINDOWS_NAME':
# [user]
# 	name = USER_NAME
# 	email = email
#
# [credential "http://LINK"]
# 	username = USER_NAME
